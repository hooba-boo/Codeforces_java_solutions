import java.util.Scanner;
 
public class Solution {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int a = scan.nextInt();
        if(a % 2 == 0 && a > 2){
            System.out.println("YES");
        }else{
            System.out.println("NO");
        }
    }
}
