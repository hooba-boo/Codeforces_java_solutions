import java.util.Scanner;
public class Solution{
    public static void main(String args[]){
        Scanner scan = new Scanner(System.in);
        int k = scan.nextInt();
        int n = scan.nextInt();
        int w = scan.nextInt();
        int c, sum = 0;
        for(int i = 1; i <= w; i++){
            sum += k*i;
        }
        if(sum > n)
            System.out.println(sum-n);
        else
            System.out.println(0);
    }
}
