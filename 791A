import java.util.Scanner;
public class Solution{
    public static void main(String args[]){
        Scanner scan = new Scanner(System.in);
        int a = scan.nextInt();
        int b = scan.nextInt();
        int c = 0;
        while(b >= a){
            a *= 3;
            b *= 2;
            c++;
        }
        System.out.println(c);
    }
}
